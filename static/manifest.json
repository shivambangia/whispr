{
  "manifest_version": 3,
  "name": "Whispr Overlay",
  "version": "1.1",
  "description": "Uses speech recognition and LangChain to perform browser actions via an overlay.",
  "permissions": [
    "activeTab",
    "tabs",
    "bookmarks",
    "storage",
    "scripting"
  ],
  "icons": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    },
  "action": {
    "default_title": "Toggle Whispr Overlay"
  },
  "background": {
    "service_worker": "background.bundle.js"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content_script.bundle.js"],
      "css": ["overlay.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ "overlay.css" ],
      "matches": [ "http://*/*", "https://*/*" ]
    }
  ]
} 