{
  "manifest_version": 3,
  "name": "Speech to Action Agent",
  "version": "1.0",
  "description": "Uses speech recognition and LangChain to perform browser actions.",
  "permissions": [
    "activeTab",
    "tabs",
    "bookmarks",
    "storage"
  ],
  "icons": {
      "16": "assets/images/icon16.png",
      "48": "assets/images/icon48.png",
      "128": "assets/images/icon128.png"
    },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Speech Agent"
  },
  "background": {
    "service_worker": "background.bundle.js", 
    "type": "module"
  }
} 