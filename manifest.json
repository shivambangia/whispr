{
  "manifest_version": 3,
  "name": "Speech to Action Agent",
  "version": "1.0",
  "description": "Uses speech recognition and LangChain to perform browser actions.",
  "permissions": [
    "activeTab",
    "tabs",
    "bookmarks",
    "storage"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Speech Agent",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/background.js",
    "type":"module"
   }
}